[General]
windowWidth=128
windowHeight=128
drawBBox=false
rendererType=2

[BVH]
build = true
type = 1 # 0:BBVH 1:QBVH_SISD
useSIMD = true
draw = false
drawDepth = 7

[RayTracing]
useBVH = true
maxRayBounce = 6
nSubPixelSqrt = 1
useTentFilter = false
distanceToProjPlane=140

[PhotonMap] # for Indirect Light
enable = true
nPhotons = 10000
#nPhotons = 100000
nMaxStorePhotons = 200000
nEstimatePhotons = 1000
estimateDist = 25.0
estimateEllipseScale = 0.2
nSubPixelSqrt = 1
enableConeFilter = true
coneFilterK = 1.1   # kに比例してWeightが軽くなる
nTracePhotonsPerThread = 10000
maxPhotonBounce = 10
maxRayBounce = 10
useBVH = true
#finalGethering = true
nFinalGetheringRays = 64
nMaxGlossyBounce = 1
nGlossyRays = 256

[CoarsticPhotonMap]
enable = true
nPhotons = 40000
nMaxStorePhotons = 400000
nEstimatePhotons = 200
estimateDist = 5
estimateEllipseScale = 0.2
enableConeFilter = true
coneFilterK = 1.1   # kに比例してWeightが軽くなる
nTracePhotonsPerThread = 10000
maxPhotonBounce = 40
useBVH = true

[ShadowPhotonMap]
enable = true
nPhotons = 30000
nMaxStorePhotons = 60000
nEstimatePhotons = 300
estimateDist = 9.0
estimateEllipseScale = 1.0

# @todo RendererのConfigとPhotonMapデータ構造自体のコンフィグを分ける
# 2つ以上のLightでpenumbra_estimate test

[PostEffect]
toneMap.enabled = false
toneMap.keyValue = 0.045

[Camera]
camera.position = 0 12 285
camera.direction = 0 -0.04 -1.0
camera.fovY = 0.5135

[LightSource]
type = SPHERE
position = 0 200 100
radius = 5
flux = 50000 50000 50000
#nSamples = 128
nSamples = 32

