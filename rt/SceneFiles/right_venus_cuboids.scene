[General]
windowWidth=700
windowHeight=600
#windowWidth=256
#windowHeight=256
buildBVH=true
drawBVH=false
drawBBox=false
drawBVHDepth=7
rendererType=2

[BVH]
build = true
type = 2  # 0:BBVH 1:QBVH_SISD 2:QBVH_SIMD
useSIMD = true
draw = false
drawDepth = 7

[RayTracing]
useBVH = true
maxRayBounce = 6
nSubPixelSqrt = 1
useTentFilter = false
distanceToProjPlane=140

# @todo [PhotonMapRenderer]
# @todo direct=true
# @todo indirect=true
# @todo coarstic=true
# @todo shadowEstimate=true

[PhotonMap] # for Indirect Light
enable = true
nPhotons = 100000
nMaxStorePhotons = 200000
nEstimatePhotons = 1000
estimateDist = 25.0
estimateEllipseScale = 0.2
nSubPixelSqrt = 2
enableConeFilter = true
coneFilterK = 1.1   # kに比例してWeightが軽くなる
nTracePhotonsPerThread = 10000
maxPhotonBounce = 20
maxRayBounce = 10
useBVH = true
#finalGethering = true
nFinalGetheringRays = 64
nMaxGlossyBounce = 1
nGlossyRays = 256

[CoarsticPhotonMap]
enable = true
nPhotons = 400000
nMaxStorePhotons = 400000
nEstimatePhotons = 200
estimateDist = 5
estimateEllipseScale = 0.2
enableConeFilter = true
coneFilterK = 1.1   # kに比例してWeightが軽くなる
nTracePhotonsPerThread = 10000
maxPhotonBounce = 40
#maxRayBounce = 20
useBVH = true

[ShadowPhotonMap]
enable = true
nPhotons = 30000
nMaxStorePhotons = 60000
nEstimatePhotons = 300
estimateDist = 9.0
estimateEllipseScale = 1.0

